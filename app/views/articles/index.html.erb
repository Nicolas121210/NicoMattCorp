<h1>Listing articles</h1>
<style>
  li a:hover {
            background: black;
            color: blue;
        }
        li {
            float: left;
        }
        li a {
            display: block;
            color: blue;
            text-align: center;
            padding: 16px;
            text-decoration: none;
        }
        ul {
            list-style-type: none;
            overflow: hidden;
            margin: 0;
            padding: 0;
        }
</style>
<%= link_to 'New article', new_article_path %>
<table border=1px>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: {confirm: "Are you sure?"}%></td>
    </tr>
  <% end %>
</table>
<ul>
  <li><%= link_to 'Main Menu' , controller: 'welcome'%></li>
</ul>